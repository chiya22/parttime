<!DOCTYPE html>
<html>

<head>
  <link rel='stylesheet' href='/stylesheets/destyle.css' />
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=yes">
  <title>バイトシフト調整</title>
</head>

<body>
  <div class="main-container">
    <ul>
      <% if (users) { %>
      <%  users.forEach( user => { %>
      <li>
        <% if (user.ymd_end === '99991231') { %>
          <a class="btn" href="users/<%= user.id %>">
            <%= user.name %>（<%= user.id %>）
          </a>
        <% } else { %>
          <a class="btn-end" href="users/<%= user.id %>">
            <%= user.name %>（<%= user.id %>）
          </a>
        <% } %>
      </li>
      <%  }) %>
      <% } %>
    </ul>
    <div class="btn-footer">
      <a class="btn-link" href="users/insert">新規登録</a>
    </div>
    <div class="btn-footer">
      <a href="/" class="btn-link">戻る</a>
      <% if (locals.user){ %>
        <form method="POST" action="/logout">
          <input type="submit" class="btn-link" button value="ログアウト" />
        </form>
      <% } %>
      </div>
  </div>
</body>

</html>